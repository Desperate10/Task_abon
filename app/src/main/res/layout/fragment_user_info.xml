<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.userinfo.UserInfoFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.0" />

        <TextView
            android:id="@+id/lng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.0" />
    </LinearLayout>

    <TableLayout
                android:id="@+id/basic_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/colorPrimary"
                android:textSize="17sp"
                android:gravity="start|center"
                android:layout_weight="0.4"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:text="О/р" />

            <TextView
                android:id="@+id/personal_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:paddingStart="8dp"
                android:maxLines="4"
                android:layout_weight="0.6"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="start|center"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/colorPrimary"
                android:textSize="17sp"
                android:gravity="start|center"
                android:layout_weight="0.4"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:text="Адреса" />

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:paddingStart="8dp"
                android:maxLines="4"
                android:layout_weight="0.6"
                android:layout_marginEnd="2dp"
                android:gravity="start|center"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/colorPrimary"
                android:textSize="17sp"
                android:gravity="start|center"
                android:layout_weight="0.4"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:text="ПІБ" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:paddingStart="8dp"
                android:maxLines="4"
                android:layout_weight="0.6"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="start|center"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/colorPrimary"
                android:textSize="17sp"
                android:gravity="start|center"
                android:layout_weight="0.4"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:text="Лічильник" />

            <TextView
                android:id="@+id/counter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:paddingStart="8dp"
                android:maxLines="4"
                android:layout_weight="0.6"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="start|center"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/colorPrimary"
                android:textSize="17sp"
                android:gravity="start|center"
                android:layout_weight="0.4"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:text="Інше/Фідер" />

            <TextView
                android:id="@+id/other_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:paddingStart="8dp"
                android:maxLines="4"
                android:layout_weight="0.6"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="start|center"
                android:text="" />
        </TableRow>
    </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/previous"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:drawableLeft="@drawable/ic_arrow_left"
                    android:text="@string/previous"
                    android:singleLine="true"/>
                <Spinner
                    android:id="@+id/block_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"/>
                <Button
                    android:id="@+id/next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="@string/next"
                    android:singleLine="true"/>

            </LinearLayout>
            <ScrollView
                android:id="@+id/info_tables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/info_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"/>

            </ScrollView>

            <include
                android:id="@+id/results"
                layout="@layout/results_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

    </ScrollView>


</LinearLayout>